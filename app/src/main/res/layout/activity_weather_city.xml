<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollViewWeatherCity"
    android:background="@drawable/animation_morning"
    tools:context=".WeatherCity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginVertical="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="-23°"
            android:textSize="64sp" />

        <View
            android:layout_width="3dp"
            android:background="@color/black"
            android:layout_height="match_parent"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Москва"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Облачно"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/partly_cloudy" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Понедельник"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Jan 2022"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06:43"
            android:textAlignment="center"
            android:textSize="24sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_rounded"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Давление"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <app.futured.donut.DonutProgressView
                    android:id="@+id/viewDonutRain"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    app:donut_bgLineColor="@color/grey"
                    app:donut_cap="1.0"
                    app:donut_gapAngle="270"
                    app:donut_gapWidth="20"
                    app:donut_strokeWidth="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textAlignment="textStart"
                        android:text="1000"
                        />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="/"
                        />


                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:text="1200"
                        />

                </LinearLayout>


            </LinearLayout>


            <TableLayout
                android:layout_marginLeft="20dp"
                android:shrinkColumns="*"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:text="Влажность:"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:text="12:00"
                        />

                </TableRow>

                <TableRow android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:text="Температура по ощущению:"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:id="@+id/textView25"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="12:00"
                        android:textSize="16sp" />

                </TableRow>


                <TableRow android:layout_marginBottom="15dp">
                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Скорость ветра:"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:text="12:00 (км/ч)"
                        />

                </TableRow>


                <TableRow android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="151dp"
                        android:layout_height="wrap_content"
                        android:text="Порыв ветра:"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textAlignment="textEnd"
                        android:text="10.0 (км/ч)" />

                </TableRow>

            </TableLayout>



        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listWeatherHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:clickable="false"
        android:focusable="false"
        android:background="@drawable/bg_white_rounded"
        tools:scrollbars="horizontal"/>
    </LinearLayout>


</ScrollView>