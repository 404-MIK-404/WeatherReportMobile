<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home">

        <LinearLayout
            android:id="@+id/homeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:clickable="true"
            android:orientation="vertical"
            android:focusable="true">


            <android.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_white_rounded"
                android:color="#F4F4F4"
                android:gravity="center_horizontal|center_vertical"
                android:iconifiedByDefault="false"
                android:queryHint="Enter city" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginHorizontal="20dp"
                app:srcCompat="@mipmap/partly_cloudy" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="Москва"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="70 °С"
                android:textSize="70sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:background="@drawable/bg_white_rounded"
                android:gravity="center_horizontal"
                android:paddingHorizontal="40dp"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_gravity="center_horizontal"
                        android:text="Time"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/textView9"
                        android:gravity="center_horizontal"
                        android:text="UV"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:gravity="center_horizontal"
                        android:text="% Rain"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:gravity="center_horizontal"
                        android:text="AQ"
                        android:textSize="12sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="11:25 AM"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:gravity="center_horizontal"
                        android:text="4"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="58%"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="22"
                        android:textSize="15sp" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:paddingBottom="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/bg_white_rounded"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Погода на 5 дней" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/listWeatherDays"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        tools:scrollbars="horizontal"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/setChangeActivityToWeatherCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Посмотреть погоду в городе" />
        </LinearLayout>
</ScrollView>